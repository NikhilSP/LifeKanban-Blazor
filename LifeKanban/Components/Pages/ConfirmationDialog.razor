@using LifeKanban.Client
@using LifeKanban.Model

<div class="modal fade show gitlab-modal" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Title</h4>
                <button type="button" class="close" @onclick="@OnCancel">&times;</button>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" @onclick="@OnCancel">Cancel</button>
                <button type="button" class="btn btn-danger" @onclick="@OnConfirm">Delete</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Confirm Deletion";

    [Parameter] public string Message { get; set; } = "Are you sure you want to delete this item?";

    [Parameter] public EventCallback OnConfirm { get; set; }

    [Parameter] public EventCallback OnCancel { get; set; }
}